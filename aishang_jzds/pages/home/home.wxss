/**index.wxss**/
page{
    background: #f8e1da;
}
.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 50rpx 0 30rpx 0;
    height: 700rpx;
    box-sizing: border-box;
    background: #7c479f;
}

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #fff;
    font-size: 32rpx;
}

.contentInfo {
    display: flex;
    justify-content: center;
    flex-direction: row;
}

.challenge {
    width: 200rpx;
    text-align: center;
}

.challenge text {
    display: block;
    color: #fff;
    font-size: 30rpx;
}

.fontSize {
    display: inline !important;
    font-size: 60rpx !important;
}

.info-btn {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 90%;
}

.info-btn button {
    height: 80rpx;
    line-height: 80rpx;
    width: 45%;
    font-size:30rpx;
    background: #f9e7e3;
    color: #7c479f;
    border-radius: 50rpx;
}

.info-btn button:nth-child(1) {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
}

.index-logo {
    height: 40rpx;
    width: 50rpx;
}

.contengBottom {
    padding-top: 30rpx;
}

.kefu {
    width: 90%;
    background: #22ac38;
    color: #fff;
    font-size: 36rpx;
    border-radius: 50rpx;
}

.indexGg {
    width: 90%;
    margin: 0 auto;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-top: 20rpx;
    border-bottom: 1px solid #ecd6d0;
    padding: 10rpx 0;
}

.indexGgImg {
    height: 100rpx;
    width: 100rpx;
}

.indexGg-text {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}

.indexGg-text text:nth-child(1) {
    color: #a19895;
    font-size: 32rpx;
}

.indexGg-text text:nth-child(2) {
    color: #a19895;
    font-size: 26rpx;
}

.indexGgBtn {
    font-size: 30rpx;
    color: #fff;
    background: #7c479f;
    border-radius: 60rpx;
    margin: 0;
    height: 60rpx;
    line-height: 60rpx;
}

/* 挑战更多机会遮罩 */

.index-zhezhao {
    background: rgba(0, 0, 0, 0.5);
    width: 100%;
    height: 100%;
    position: fixed;
    z-index: 10;
}

.show {
    display: block;
}

.hide {
    display: none;
}

.index-share {
    width: 90%;
    height: 350rpx;
    position: relative;
    top: 50%;
    left: 50%;
    margin: -150rpx 0 0 -45%;
}

.index-share image {
    height: 100%;
    width: 100%;
}

.index-share-btn {
    position: absolute;
    width: 90%;
    bottom: 10%;
    left: 50%;
    margin-left: -45%;
    background: #e0874a;
    color: #fff;
    border: 1px solid #fff;
    box-shadow: 0 5px 5px #bbb;
    display: flex;
    flex-direction: row;
    line-height: 100rpx;
    height: 100rpx;
    justify-content: space-between;
}

.index-share-btn text:nth-child(1) {
    font-size: 34rpx;
}

.index-share-btn text:nth-child(2) {
    font-size: 40rpx;
}

.index-zhezhao-hide {
    position: absolute;
    height: 50rpx !important;
    width: 50rpx !important;
    left: 50%;
    margin-left: -25rpx;
    bottom: 20%;
}
